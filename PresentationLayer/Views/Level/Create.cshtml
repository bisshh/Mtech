@model PresentationLayer.Models.LevelViewModel

<div class="row">
    <div class="col-md-8">
        <div class="wrap">
            <h2>Create Level</h2>
            <hr>
            @using (Html.BeginForm("SaveLevel", "Level", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="form-group">
                    <label for="Year" class="col-sm-4 control-label">@Html.LabelFor(x => x.Year)</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.Year, new { @class = "form-control", @id = "Year", type = "date" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="LevelName" class="col-sm-4 control-label">@Html.LabelFor(x => x.Semester)</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.Semester, new { @class = "form-control", @id = "LevelName" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Desc" class="col-sm-4 control-label">@Html.LabelFor(x => x.Description)</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.Description, new { @class = "form-control", @id = "Desc" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-8">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <button type="reset" class="btn btn-danger">Cancel</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>