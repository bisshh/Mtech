@model PresentationLayer.Models.CourseViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="form-wrap">
                    <h2>Update Course</h2>
                    @using (Html.BeginForm("UpdateCourse", "Course", FormMethod.Get))
                    {
                        <form>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label for="DepartmentID">@Html.LabelFor(x => x.DepartmentID)</label>
                                    </div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(x => x.DepartmentID, new { @class = "form-control", @id = "DepartmentID" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label for="LevelID">@Html.LabelFor(x => x.LevelID)</label>
                                    </div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(x => x.LevelID, new { @class = "form-control", @id = "LevelID" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label for="Name">@Html.LabelFor(x => x.Name)</label>
                                    </div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @id = "Name" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label for="Duration">@Html.LabelFor(x => x.Duration)</label>
                                    </div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(x => x.Duration, new { @class = "form-control", @id = "Duration" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label for="Credit">@Html.LabelFor(x => x.Credit)</label>
                                    </div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(x => x.Credit, new { @class = "form-control", @id = "Credit" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-8 col-md-offset-4">
                                        <button type="submit" class="btn btn-default">Edit</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
