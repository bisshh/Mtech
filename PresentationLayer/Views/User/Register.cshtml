@model PresentationLayer.Models.UserViewModel

<div class="row">
    <div class="col-md-8">
        <div class="wrap">
            <h2>Create User</h2>
            <hr>
            @using (Html.BeginForm("SaveUser", "User", FormMethod.Post))
            {
                @Html.ValidationSummary(true, "Registration Failed, fields.");
                <form>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="FirstName">@Html.LabelFor(x => x.FirstName)</label>
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", @id = "FirstName" })
                                <span class="has-error danger">@Html.ValidationMessageFor(x => x.FirstName)</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="MiddleName">@Html.LabelFor(x => x.MiddleName)</label>
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.MiddleName, new { @class = "form-control", @id = "MiddleName" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="LastName">@Html.LabelFor(x => x.LastName)</label>
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @id = "LastName" })
                                <span class="has-error danger">@Html.ValidationMessageFor(x => x.LastName)</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="Username">@Html.LabelFor(x => x.Username)</label>
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @id = "Username" })
                                <span class="has-error danger">@Html.ValidationMessageFor(x => x.Username)</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="Email">@Html.LabelFor(x => x.Email)</label>
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @id = "Email" })
                                <span class="has-error danger">@Html.ValidationMessageFor(x => x.Email)</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="Password">@Html.LabelFor(x => x.Password)</label>
                            </div>
                            <div class="col-md-8">
                                @Html.PasswordFor(x => x.Password, new { @class = "form-control", @id = "Password" })
                                <span class="has-error danger">@Html.ValidationMessageFor(x => x.Password)</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="ConfirmPassword">@Html.LabelFor(x => x.ConfirmPassword)</label>
                            </div>
                            <div class="col-md-8">
                                @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control", @id = "ConfirmPassword" })
                                <span class="has-error danger">@Html.ValidationMessageFor(x => x.ConfirmPassword)</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-8 col-md-offset-4">
                                <button type="submit" class="btn btn-default">Register</button>
                            </div>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>