@model PresentationLayer.Models.EmployeeViewModel
@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-md-8">
        <div class="wrap">
            <h2>Create Employee</h2>
            <hr>
            @using (Html.BeginForm("SaveEmployee", "Employee", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="form-group">
                    <label for="Department" class="col-sm-4 control-label">@Html.LabelFor(x => x.Department)</label>
                    <div class="col-sm-8">
                        @Html.DropDownListFor(x => x.Department, new SelectList(ViewBag.departmentNames), new { @class = "form-control", @id = "Department" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="FirstName" class="col-sm-4 control-label">@Html.LabelFor(x => x.FirstName)</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", @id = "FirstName" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="MiddleName" class="col-sm-4 control-label">@Html.LabelFor(x => x.MiddleName)</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.MiddleName, new { @class = "form-control", @id = "MiddleName" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="LastName" class="col-sm-4 control-label">@Html.LabelFor(x => x.LastName)</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @id = "LastName" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Email" class="col-sm-4 control-label">@Html.LabelFor(x => x.Email)</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @id = "Email", type = "email" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Phone" class="col-sm-4 control-label">@Html.LabelFor(x => x.Phone)</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @id = "Phone" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Address" class="col-sm-4 control-label">@Html.LabelFor(x => x.Address)</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.Address, new { @class = "form-control", @id = "Address" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Position" class="col-sm-4 control-label">@Html.LabelFor(x => x.Position)</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.Position, new { @class = "form-control", @id = "Position" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Gender" class="col-sm-4 control-label">@Html.LabelFor(x => x.Gender)</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.Gender, new { @class = "form-control", @id = "Gender" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="HiredDate" class="col-sm-4 control-label">@Html.LabelFor(x => x.HiredDate)</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.HiredDate, new { @class = "form-control", @id = "HiredDate", type = "date" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-8 col-sm-offset-4">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <button type="reset" class="btn btn-danger">Cancel</button>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-md-4">
        <div class="wrap">
            <h2>Top 5 Students</h2>

        </div>
    </div>
</div>